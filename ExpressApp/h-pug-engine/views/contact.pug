extends layout.pug

block title
    <title>#{title}</title>

block content
   
    <h1>#{title} in Pug</h1>
    if emailsVisible
        <h3>Emails</h3>
        <ul>
            each email in emails
                <li>#{email}</li>
        </ul>
    else
        <h3>Email not found</h3>
    <p>Phone: #{phone}</p>